{
  "compilerOptions": {
    "lib": ["esnext", "dom", "esnext.asynciterable"],
    "target": "es2018",
    "module": "commonjs",
    "rootDirs": ["src", "migrations"],
    "outDir": "build/",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "build"]
}
